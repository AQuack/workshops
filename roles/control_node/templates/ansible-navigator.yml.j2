---
ansible-navigator:
  ansible:
    inventories:
    - /home/{{username}}/lab_inventory/hosts

  execution-environment:
    image: quay.io/acme_corp/{{ workshop_type }}_ee
    enabled: true
    container-engine: podman
    pull-policy: missing
    volume-mounts:
    - src: "/etc/ansible/"
      dest: "/etc/ansible/"
      label: "Z"

  logging:
    file: /home/{{username}}/.ansible-navigator/logs/ansible-navigator.log

  playbook-artifact:
    enable: True
    replay: /tmp/artifact.json
    save-as: /tmp/artifact.json
